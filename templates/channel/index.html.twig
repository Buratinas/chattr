{% extends 'base.html.twig' %}

{% block title %}Channels{% endblock %}

{% block body %}
    <style>
        .container { max-width: 600px; margin: auto; padding: 20px; }
        .channel-list { margin-bottom: 20px; }
        .channel-item { padding: 10px; border-bottom: 1px solid #ddd; }
        .submit-btn { margin-top: 10px; padding: 10px 15px; background: #007bff; color: white; border: none; cursor: pointer; }
        .submit-btn:hover { background: #0056b3; }
    </style>

    <div class="container">
        <h1>Channels</h1>

        <!-- List Existing Channels -->
        <div class="channel-list">
            <h2>Existing Channels</h2>
            <ul>
                {% for channel in channels %}
                    <li class="channel-item">{{ channel.name }}</li>
                {% else %}
                    <p>No channels available.</p>
                {% endfor %}
            </ul>
        </div>

        <!-- Add New Channel Form -->
        <div>
            <h2>Create New Channel</h2>
            {{ form_start(form) }}
            {{ form_widget(form) }}

            <!-- Fixed Submit Button Inside Form -->
            <div class="col-auto">
                <button type="submit" class="submit-btn">Save</button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
{% endblock %}